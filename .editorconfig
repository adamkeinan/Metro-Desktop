# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
tab_width = 4
indent_size = 2
indent_style = space
max_line_length = 80
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[{Makefile,**.mk}]
# Use tabs for indentation (Makefiles require tabs)
indent_style = tab
[*.scss]
indent_size = 2
indent_style = space

[COMMIT_EDITMSG]
max_line_length = 0