{
	"compilerOptions": {
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "es2018",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "baseUrl": "./src",
    "checkJs": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
		"outDir": "./dist/",
    "rootDir": "./",
    "preserveConstEnums": true,
    "removeComments": true,
    "noEmit": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [ "./node_modules/@types" ]
  },
  "include": [
    "./src/**/**/*", "documentation/babel/config.babel"
  ],
  "exclude": [
    ".bablerc",
    "node_modules",
    "**/*.spec.tsx"
  ],
  "compileOnSave": false
}
